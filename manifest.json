{
	"name": "Kite Toolkit",
	"description": "Extra features to make your trading life easier with kite.zerodha.com",
	"version": "1.3",
	"manifest_version": 2,
	"permissions": [ 
		"background", 
		"notifications", 
		"tabs", 
		"storage", 
		"unlimitedStorage", 
		"cookies",
		"*://kite.zerodha.com/*",
		"*://ws.zerodha.com/*",
		"*://api.kite.trade/*",
		"*://unpkg.com/*"
	],
	"icons": {"128": "/images/icon.png", "16": "/images/icon_small.png"},
	"browser_action": { "default_icon": "/images/icon_small.png"},
	"background": {
		"scripts": [ "/lib/jquery-2.1.4.min.js", "/lib/moment.min.js", "/lib/kiteconnect.js", "/lib/smtp.js", "/lib/speakClient.js", "/js/utils.js", "/js/background.js" ]
	},
	"content_scripts": [{
		"js": ["/lib/jquery-2.1.4.min.js", "/js/script.js"],
		"run_at": "document_end",
		"matches": ["*://kite.zerodha.com/*"],
		"all_frames": true
	}],
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com https://cdn4.mxpnl.com/; object-src 'self'",
	"web_accessible_resources": ["*"]
}
